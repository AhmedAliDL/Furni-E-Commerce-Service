@model UserAccountViewModel
@{
    ViewData["Title"] = "Index";
}

<body class="bg-body">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">User Profile</h3>
                                </div>
                                <div class="card-body">
                                    <form method="get" enctype="multipart/form-data" asp-action="Index" asp-controller="Account">
                                        <!-- Display validation errors -->

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="FName" id="inputFirstName" disabled type="text" placeholder="Enter your first name" />
                                                    <label for="inputFirstName">First name</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" asp-for="LName" id="inputLastName" disabled type="text" placeholder="Enter your last name" />
                                                    <label for="inputLastName">Last name</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Email" id="inputEmail" type="email" disabled placeholder="name@example.com" />
                                            <label for="inputEmail">Email address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Phone" id="inputPhone" type="tel" disabled placeholder="" />
                                            <label for="inputPhone">Phone Number</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Address" id="inputAddress" disabled type="text" placeholder="" />
                                            <label for="inputAddress">Address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Country" id="inputCountry" disabled type="text" placeholder="" />
                                            <label for="inputCountry">Country</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="City" id="inputCity" disabled type="text" placeholder="" />
                                            <label for="inputCity">City</label>
                                        </div>
                                        
                                    </form>
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <a asp-action="EditAccount" asp-controller="Account" class="btn btn-primary btn-block">Edit Account</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
<br />

