@model List<OrderDetails>
@{
    ViewData["Title"] = "OrderDetails";
}


<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Cart</h1>
                </div>
            </div>
            <div class="col-lg-7"></div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Product Quantity</th>
                                <th>Product Price</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td class="product-thumbnail">
                                        <img src="@order.ProductImage" alt="Image" class="img-fluid">
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.ProductName</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.ProductQuantity</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">$@order.ProductPrice</h2>
                                    </td>
                                    <td>

                                        @if (order.ShippingStatus == "Delivered")
                                        {
                                            <a disabled class="btn btn-black btn-sm ">X</a>
                                        }
                                        else
                                        {
                                            <a asp-action="DeleteSpecificItemFromOrder"
                                               asp-controller="Orders"
                                               asp-route-orderId="@order.OrderId"
                                               asp-route-productId="@order.ProductId"
                                               asp-route-quantity="@order.ProductQuantity"
                                               class="btn btn-black btn-sm text-danger">X</a>
                                        }

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/tiny-slider.js"></script>
<script src="/js/custom.js"></script>





