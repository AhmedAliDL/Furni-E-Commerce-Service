@model List<OrderShippingViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Cart</h1>
                </div>
            </div>
            <div class="col-lg-7"></div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Shipping Address</th>
                                <th>Shipping Date</th>
                                <th>Products Amount</th>
                                <th>Total Price</th>
                                <th>Shipping Status</th>
                                <th>remaining Days</th>
                                <th>Details</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <h2 class="h5 text-black">@order.Address</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.OrderDate.ToString("D")</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.TotalAmount</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">$@order.TotalPrice</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.ShippingStatus</h2>
                                    </td>
                                    <td>
                                        <h2 class="h5 text-black">@order.RemainingDays</h2>
                                    </td>
                                    <td>

                                        <a asp-action="OrderDetails" asp-controller="Orders" asp-route-orderId="@order.OrderId" class="btn btn-black btn-sm">📋</a>

                                    </td>
                                    <td>
                                        @if (order.ShippingStatus == "Delivered")
                                        {
                                            <a disabled class="btn btn-black btn-sm">X</a>
                                        }
                                        else
                                        {
                                            <a asp-action="DeleteFullOrder" asp-controller="Orders" asp-route-orderId="@order.OrderId" class="btn btn-black btn-sm text-danger">X</a>
                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/tiny-slider.js"></script>
<script src="/js/custom.js"></script>

